# Device Selection - Choose ONE option
DEVICE_TYPE=Dexcom
# DEVICE_TYPE=Abbott
# DEVICE_TYPE=FreestyleLibre
# DEVICE_TYPE=Freestyle

# Dexcom Configuration (only if using Dexcom)
DEXCOM_USERNAME=your_dexcom_username_here
DEXCOM_PASSWORD=your_dexcom_password_here
DEXCOM_REGION=us

# Abbott Configuration (only if using Abbott/FreestyleLibre/Freestyle)
ABBOTT_USERNAME=your_abbott_username_here
ABBOTT_PASSWORD=your_abbott_password_here
ABBOTT_REGION=eu

# Nightscout Configuration (required for all devices)
NIGHTSCOUT_URL=https://your-nightscout-site.us.nightscoutpro.com
NIGHTSCOUT_API_SECRET=your_api_secret_here
